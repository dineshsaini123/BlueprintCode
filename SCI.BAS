Function valid_date(mvar As String)
    If Len(Trim(mvar)) < 8 Or Val(Mid(mvar, 3, 2)) > 12 Then
        valid_date = ""
        Exit Function
    End If
    mvar = Left(mvar, 2) & "/" & Mid(mvar, 3, 2) & "/" & Right(mvar, 4)
    valid_date = mvar
End Function


